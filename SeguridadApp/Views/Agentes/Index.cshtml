@model IEnumerable<SeguridadApp.Models.Agente>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    @Html.ActionLink("         Agregar nuevo agente ", "Create", null, new { @class = "waves-effect waves-light btn-large col s12  actionLinkReportar" })
</div><br />
<table class="striped responsive-table">
    <thead>
        <tr>
            <th>1er. Apellido</th>
            <th>2do. Apellido</th>
            <th>Nombres</th>
            <th>Cedula</th>
            <th>Rango</th>
            <th>Fecha Nacimiento</th>
            <th>Telefono</th>
            <th>Foto</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Apellido1</td>
            <td>@item.Apellido2</td>
            <td>@item.Nombres</td>
            <td>@item.Cedula</td>
            <td>@item.Rango</td>
            <td>@item.FechaNacimiento</td>
            <td>@item.Telefono</td>
            <td><img class="responsive-img" src="@item.Foto" width="30" height="30"></td>
            <td>
                <a href="/Agentes/Detalle/@item.Id"><i class="far fa-eye"></i> Ver </a>
            </td>
            <td>
                <a href="/Agentes/Editar/@item.Id"><i class="fas fa-user-edit"></i> Editar </a>

            </td>
            <td>
                <a href="/Agentes/Detalle/@item.Id"><i class="far fa-trash-alt"></i> Eliminar </a>
            </td>
            @*<td>@Html.ActionLink("Detalle", "Detalle", new { id = item.Id }) </td>*@
   
        </tr>
        }
    </tbody>
</table>