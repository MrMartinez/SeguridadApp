@model SeguridadApp.ViewModels.AgenteRangoViewModel
@{
    ViewBag.Title = "Detalle";
}

<br />
<hr />


<h2 class="header">@Model.Apellido1 @Model.Apellido2</h2>

<div class="row">
    <div class="col s3 m3">        
            <div class="imgCard" >
                <p><img class="responsive-img" src="@Model.Foto" width="100%" height="100%"></p>
            </div>   
    </div>
    <div class="col s9 m9">
        <div class="card horizontal">
            <div class="card-stacked">
                <div class="card-content">
                    <p class="pCardsNombres">@Model.Nombres</p>
                    <p class="pCards">Cedula: @Model.Cedula</p>
                    <p class="pCards">Rango: @Model.DescripcionRango</p>
                    <p class="pCards">Telefono: @Model.Telefono</p>
                </div>
                <div class="card-action">
                    <a href="/Agentes/Editar/@Model.AgenteId"><i class="fas fa-user-edit"></i> Editar </a>
                    <a href="/Agentes/Detalle/@Model.AgenteId"><i class="far fa-trash-alt"></i> Eliminar </a>
                    <div style="text-align:right; margin-right:22px">

                        @Html.ActionLink("Regresar", "Index", null, new { @class = " actionLinkReportar" })
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

